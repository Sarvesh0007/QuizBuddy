<div class="wrapper m-auto" style="width: 700px">
  <div class="reg_form">
    <h1 class="m-5">LOGIN</h1>
    <%- include('../partials/dismissiblealert.ejs') %>

    <form action="/users/login" method="POST">
      <div class="container m-auto">
        <div class="m-5">
          <div class="form-group">
            <label for="mail">Email</label>
            <input type="email" name="email" id="mail" class="form-control" />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              name="password"
              id="password"
              class="form-control"
            />
          </div>

          <button class="btn my-2 btn-primary" type="submit" value="Submit">
            Login
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
